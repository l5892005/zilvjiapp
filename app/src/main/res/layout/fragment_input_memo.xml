<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_commont_stroke_cor_bg"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="请输入您的便签"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_page"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_2"
            android:inputType="textMultiLine"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_333"
            android:scrollbars="vertical"
            android:enabled="true"
            android:gravity="top"
            android:background="@drawable/bt_commont_stroke_rec_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/divider_e0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cacel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                android:gravity="center"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_18" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/divider_e0" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确定"
                android:gravity="center"
                android:textColor="#ff0764fc"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>